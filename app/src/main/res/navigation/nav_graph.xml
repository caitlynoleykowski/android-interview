<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nav_graph"
	app:startDestination="@id/heroes_fragment">
	<fragment
		android:id="@+id/heroes_fragment"
		android:name="com.png.interview.ui.heroes.HeroesFragment"
		android:label="@string/heroes_title"
		tools:layout="@layout/fragment_heroes">
		<action
			android:id="@+id/action_heroes_fragment_to_heroesDetailFragment"
			app:destination="@id/heroesDetailFragment" />
	</fragment>
	<fragment
		android:id="@+id/maps_fragment"
		android:name="com.png.interview.ui.maps.MapsFragment"
		android:label="@string/maps_title"
		tools:layout="@layout/fragment_maps" />
	<fragment
		android:id="@+id/about_fragment"
		android:name="com.png.interview.ui.about.AboutFragment"
		android:label="@string/about_title"
		tools:layout="@layout/fragment_about" />
	<fragment
		android:id="@+id/heroesDetailFragment"
		android:name="com.png.interview.ui.heroes.HeroDetailFragment"
		android:label="HeroesDetailFragment"
		tools:layout="@layout/fragment_heroes_detail" >
		<argument
			android:name="heroName"
			app:argType="string" />
	</fragment>
</navigation>